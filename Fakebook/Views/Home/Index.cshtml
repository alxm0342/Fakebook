<div class="row">
    <div class="col-md-1">
    </div>

    <div class="col-md-4">
        <img src="~/Images/fb_left.png" />
    </div>    

    <div class="col-md-6">
        <div class="row">
            <img src="~/Images/fb_status.png" />
            <input type="text" class="form-control" placeholder="What's on your mind?" style="margin-bottom: 24px;">
        </div>
        <div class="row">
            <img src="~/Images/fb_announce.png" />
        </div>
        <div class="row">
            <img src="~/Images/fb_wall.png" />
        </div>
        @for (int i = 0; i < Model.commentList.Count(); i++)
        {
            <div style="background-color: #F6F7F8; margin-left: -15px; max-width: 493px; padding-bottom: 0px;">
                <div class="row" style="padding-top: 0px;">
                    <div class="col-md-1" style="margin-left: 10px; margin-right: 2px; padding-top: 4px;">
                        <img src="~/Images/@Model.commentList[i].Person.Image" />
                    </div>
                    <div class="col-md-10">
                        <span class="username">@Html.DisplayFor(model => model.commentList[i].Person.Username)</span>&nbsp;@Html.DisplayFor(model => model.commentList[i].Comment1)
                        <p class="comment-datetime">@Html.DisplayFor(model => model.commentList[i].CommentTime)</p>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-1" style="margin-left: -6px; margin-right: 17px; padding-top: 10px;">
                <img src="~/Images/@Model.ownerImage" />
            </div>
            <div class="col-md-10">
                <form action="/Comment/Add" method="post" class="form-inline">
                    @Html.HiddenFor(model => model.newComment.UserId)
                    @Html.HiddenFor(model => model.newComment.CommentTime)
                    <input type="text" class="form-control" name="newComment.Comment1" placeholder="Write a comment..." style="margin: 10px 0px 10px -22px; width: 360px;" />
                    <input class="btn btn-primary" type="submit" value="Post" />
                </form>
            </div>
        </div>
    </div>

